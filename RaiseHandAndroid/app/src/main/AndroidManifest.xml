<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sae1.raisehand">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <!-- <uses-permission android:name="android.permission.READ_CONTACTS" /> -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:name="app.MainActivity"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="utils.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="app.TeacherClasses"></activity>
        <activity android:name="app.TeacherHomePage"></activity>
        <activity android:name="app.TeacherNotifications"></activity>
        <activity android:name="app.TeacherSettings"></activity>
        <activity android:name="app.TeacherStudents"></activity>
        <activity android:name="utils.SignupActivity"></activity>
        <activity android:name="com.example.sae1.raisehand.student_notifications"></activity>
        <activity android:name="com.example.sae1.raisehand.student_settings"></activity>
        <activity android:name="com.example.sae1.raisehand.student_classes"></activity>
        <activity android:name="com.example.sae1.raisehand.student_home_page"></activity>
        <!--<activity android:name="utils.QuestionActivity"></activity>-->
    </application>
</manifest>